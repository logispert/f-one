<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="onlineDDThemeLayout" >
        <item name = "android:padding"> 3dp </item>
    </style>

    <style name="onlineDDThemeTitle" parent="@android:style/Widget.TextView">
        <item name = "android:background">@drawable/rect_back</item>
    </style>

    <style name="onlineDDThemeResult" parent="@android:style/Widget.TextView">
        <item name = "android:background">@android:color/background_light</item>
    </style>

    <!-- 스플래쉬 테마 -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>
